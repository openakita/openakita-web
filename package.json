{
  "name": "openakita-web",
  "version": "1.0.0",
  "private": true,
  "description": "OpenAkita official website frontend",
  "scripts": {
    "dev": "vite",
    "build:motion": "esbuild assets/ts/motion.ts --bundle --target=es2019 --format=iife --outfile=assets/js/motion.js --minify",
    "watch:motion": "esbuild assets/ts/motion.ts --bundle --target=es2019 --format=iife --outfile=assets/js/motion.js --watch",
    "typecheck": "tsc --noEmit",
    "build": "npm run build:motion && npm run typecheck && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  }
}
